def read_input():
    x = input("Enter number > ")

def is_number(string):
    return string.isnumeric()

def using_if():
    if (is_number(x) == True):
        x = int(x)
        y = x/3
        print(y)
    else:
        print("not a number")

def using_try():        
    try:
        x = int(x)
    except:
        print('not a number')
    else:
        y = x/3
        print(y)
while True:
    read_input()
    #using_if()
    using_try()
